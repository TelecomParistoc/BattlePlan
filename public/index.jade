//output:index.html, pretty:true

doctype html
html(lang="fr")
    head
        title Battle Plan
        link(rel='stylesheet', href='styles/style.css')
        link(rel='stylesheet', href='styles/font-awesome.css')
    body
        div.topbar
            img(src="images/raven.svg").topbar-icon
            h2.topbar-title Telecom Robotics' Battle Plan
            a.btn.smallpi.disabled 
                span.smallicon.fa.fa-download
                | Petit Robot
            a.btn.bigpi.disabled 
                span.bigicon.fa.fa-download
                | Gros Robot
        div.content
            img(src="images/table1.svg").table-layout
            canvas#table.table-layout
            img(src="images/side.svg").table-side-layout
            div.tools
                h2 
                    span.fa.fa-star
                    | Coquillages
                br
                div.selector
                    table
                        tr
                            td.select#select1
                            td.select#select2
                            td.select#select3
                            td.select#select4
                            td.select#select5
                br
                h2 
                    span.fa.fa-map-o
                    | Chemins
                a.btn.btn-tab.smalltab petit robot
                a.btn.btn-tab.bigtab.selected-tab gros robot
                div.path-list#biglist
                div.path-list#smalllist
        script(src="bower_components/jquery/dist/jquery.min.js")
        script(src="bower_components/js-cookie/src/js.cookie.js")
        script(src="scripts/socket.io.js")
        script(src="scripts/paper.js")
        script(src="scripts/templates.js")
        script(src="scripts/tools.js")
        script(src="scripts/sidebar.js")
        script(type="text/paperscript" src="scripts/paths.js" canvas="table")
        script(src="scripts/main.js")
